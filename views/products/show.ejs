<% layout('layouts/boilerplate') %>


<section class="container">
    <%- include('../partials/flash') %>

    <div class="row">
            <!-- <% if(msg && msg.length){ %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong><%= msg %></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %> -->
    
    
            <div class="col-lg-6 mt-3">
                <div class="card shadow mx-auto" style="width: 22rem;">
                    <img src="<%= foundProduct.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h2 class="card-title"><%=foundProduct.name%></h2>
                      <h5 class="card-title"><%=foundProduct.price%></h5>
                      <p class="card-text"><%=foundProduct.desc%></p>
                      <a href="#" class="btn btn-sm btn-success">Buy</a>
                      <form method="POST" action="/user/<%=foundProduct._id%>/add" class="d-inline-block">
                          <button class="btn btn-sm btn-secondary">Add to cart</button>
                      </form>
                      <% if(currentUser && currentUser.role === 'seller'){%>
                        <a href="/products/<%=foundProduct._id%>/edit%>" class="btn btn-sm btn-light">Edit</a>
                        <form class="d-inline-block" action="/products/<%=foundProduct._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                      <% } %>
                      
                    </div>
                </div>
    
            </div>
    
            <div class="col-lg-4 reviews-section mx-auto my-2">
                <h1 class="display-5">Leave a Review</h1>
                <form action="/products/<%=foundProduct._id%>/review" method="POST">
                    <div >
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                          </fieldset>
                    </div>
                    <div class="mb-3">
                        <label class="form-lebel" for="comment">Comment:</label>
                        <textarea class="form-control" row = "3" name="comment" id="comment"></textarea>
                    </div>
    
                    <button class="btn btn-sm btn-success">Submit</button>
                </form>
    
                <div class="my-3">
                    <%for(let review of foundProduct.reviews){%>
                        
                        <div class="card mt-3">
                            <p class="card-body ">
                                <% if(review.createdAt){ %>
                                    <%= review.createdAt.toDateString()%>
                                <% } %>
                            </p>

                            <div class="card-body">
                                <p class="starability-result" data-rating="<%=review.rating%>">
                                  Rated: <%=review.rating%> stars
                                </p>
                                
                                <p class="card-text">Comment:<%=review.comment%></p>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </div>
                        </div>
    
                    <%}%>
                </div>
            </div> 
                
            
    </div>


</section>



